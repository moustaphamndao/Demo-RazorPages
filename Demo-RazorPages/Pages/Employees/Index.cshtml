@page
@model Demo_RazorPages.Pages.Employees.IndexModel
@{
    ViewData["Title"] = "Index";
}

<style>
    .btn {
        width:75px;
    }
</style>

<h1>Employees</h1>


<div class="card-deck">
    @foreach (var employee in Model.Employees)
    {
        var photopath = "~/images/" + (employee.PhotoPath ?? "noimage.jpg");

        <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
            <div class="card-header">
                <h1>@employee.Name </h1>
            </div>

            <img class="card-img-top imageThumbnail" src="@photopath" asp-append-version="true" />

            <h4>Employee ID : @employee.Id</h4>
            <h4>Email : @employee.Email</h4>
            <h4>Department : @employee.Department</h4>

            <div class="card-footer text-center">
                <a asp-page="/Employees/Details" asp-route-ID="@employee.Id" class="btn btn-primary">View</a>
                <a href="#" class="btn btn-primary">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>
    }
</div>

